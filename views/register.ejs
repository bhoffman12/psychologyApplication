<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header'); -%>

    <body>
        <!-- Navigation-->
        <%- include('layouts/navbar'); -%>
            <!-- Page Header-->

            <header class="masthead" style="background-image: url('assets/img/post-bg.jpg')">
                <div class="container position-relative px-4 px-lg-5">
                </div>
            </header>
            <!-- Post Content-->
            <div class="container pt-5">
                <div class="row justify-content-center mt-5">
                    <div class="col-md-5 p-5 " style="background: #f2f2f2;">
                        <h5 class="pb-4">Register a new account</h5>
                        <%- include('layouts/message'); -%>
                            <form action="/users/register" method="POST">
                            <div class="row">
                                <label class="pb-2">User Name</label>
                                <input required type="text" class="form-control" placeholder="User Name" id="username"
                                    name="username">
                                <label class="pt-3 pb-2">Password</label>
                                <input required type="password" class="form-control" placeholder="Password" id="password"
                                    name="password">
                            </div>
                        </br>
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="pb-2">First Name:</label>
                                    <input required type="text" class="form-control mb-3" placeholder="John" value = "" id="fname"
                                        name="fname">
                                </div>
                                <div class="col-md-6">
                                    <label class="pb-2">Last Name:</label>
                                    <input required type="text" class="form-control mb-3" placeholder="Doe" id="lname"
                                        name="lname">
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label class="pb-2">Phone Number:</label>
                                    <input required type="phone" class="form-control mb-3" placeholder="XXX-XXX-XXXX"
                                        id="phone" name="phone">
                                </div>
                                <div class="col-md-6">
                                    <label class="pb-2">Email:</label>
                                    <input required type="email" class="form-control mb-3" placeholder="email@example.com"
                                        id="email" name="email">
                                </div>
                            </div>
                            <div class="row">
                                        <label class="pb-2">Birthdate:</label>
                                    <input required type="date" class="form-control" placeholder="XX/XX/XXXX" id="birthdate"
                                        name="birthdate">
                            </div>
                                <div class="d-grid gap-2 pt-4">
                                    <button class="btn btn-primary" type="submit">Register</button>
                                </div>
                            </form>
                    </div>
                    <span class="pt-5 text-center">Already have a account? <a href="/">Login</a></span>
                </div>
            </div>
            <%- include('layouts/footer'); -%>
    </body>

</html>